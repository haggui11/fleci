/*---------------------- Start product customNavigation css --------------------*/

.customNavigation a.prev::before {
	float: left;
	left: -61px;
	text-align: left;
	right: auto;
}
.customNavigation a.prev::after {
	left: -41px;
	right: auto;
}
.customNavigation a.next::after {
	right: -41px;
	left: auto;
}
.customNavigation a.next::before {
	right: -61px;
	left: auto;
}
/*---------------------- End product customNavigation css --------------------*/
